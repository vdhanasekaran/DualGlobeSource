@model DualGlobe.ERP.Models.LoanAndAdvanceModel

@{
    ViewBag.Title = "Loan Repayment Details";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Loan And Advance Details
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="@Url.Action("Index", "Payroll")">Loan And Advance</a></li>
        <li class="active">Loan Repayment Details</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="box">
        <div class="box-body">
            <div class="row">
                <div class="col-xs-2">
                    <div class="form-group">                       
                        @Html.LabelFor(model => Model.loanAndAdvanceRecord.EmployeeId, "Employee Id: ")
                    </div>
                </div>
                <div class="col-xs-2">
                    <div class="form-group">
                        @Html.DropDownListFor(model => Model.loanAndAdvanceRecord.EmployeeId, new SelectList(Model.EmployeeList, "Value", "Text"), "--Select--", new { @id = "txtEmployeeId", @class = "form-control" })
                    </div>
                </div>
                <div class="col-xs-2">
                    <div class="form-group">
                        <label>Employee Name</label>
                    </div>
                </div>
                <div class="col-xs-2">
                    <div class="form-group">
                        <input class="form-control" id="txtEmployeeName" readonly="readonly" type="text">
                    </div>
                </div>
                <div class="col-xs-2">
                    <div class="form-group">
                        @Html.LabelFor(model => Model.loanAndAdvanceRecord.LoanAmount, "Loan Amount: ")
                    </div>
                </div>
                <div class="col-xs-2">
                    <div class="form-group">
                        @Html.TextBoxFor(model => Model.loanAndAdvanceRecord.LoanAmount, new { @id = "txtLoanAmount", @class = "form-control", @required = "required" })
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm("SubmitDetail", "LoanAndAdvance", FormMethod.Post))
            {
                @Html.HiddenFor(model => Model.loanAndAdvanceRecord.Id)
            <div class="box">
                <div class="box-body">
                    <table id="tblLoanAndAdvance" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Loan Detection Date</th>
                                <th>Loan Detection Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.loanAndAdvanceRecord.loanAndAdvanceDetails.Count; i++)
                            {
                                <tr>
                                    <td>
                                    @Html.HiddenFor(model => Model.loanAndAdvanceRecord.loanAndAdvanceDetails[i].Id)
                                    @Html.TextBoxFor(model => Model.loanAndAdvanceRecord.loanAndAdvanceDetails[i].LoanDetectionDate, new { @class = "form-control" })
                                    </td>
                                    <td>@Html.TextBoxFor(model => Model.loanAndAdvanceRecord.loanAndAdvanceDetails[i].LoanDetectionAmount, new { @class = "form-control" })</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary pull-right">Update</button>
                </div>
            </div>
            }
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->