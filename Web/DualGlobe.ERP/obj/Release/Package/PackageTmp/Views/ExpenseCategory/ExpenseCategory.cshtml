@model DualGlobe.ERP.Models.ExpenseCategoryModel

@{
    ViewBag.Title = "ExpenseCategory";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Add Expense Category
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="@Url.Action("Index", "ExpenseCategory")">ExpenseCategory</a></li>
        <li class="active">Add Supplier</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="box box-default">
        <!-- form start -->
        @using (Html.BeginForm("Submit", "ExpenseCategory", FormMethod.Post))
        {
        <div class="box-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.HiddenFor(model => Model.expenseCategoryRecord.Id)
                        @Html.LabelFor(model => Model.expenseCategoryRecord.Description, "Expense Description") <span class="required">*</span>
                        @Html.TextBoxFor(model => Model.expenseCategoryRecord.Description, new { @id = "txtExpenseCategoryDescription", @class = "form-control", @required = "required" })
                    </div>
                </div>
            </div>
            <!-- /.row -->
        </div>
        <!-- /.box-body -->

            <div class="box-footer">
                <a href="@Url.Action("Index","ExpenseCategory")" class="btn btn-primary">Back</a>
                @if (Model.expenseCategoryRecord == null || Model.PageMode == "Edit")
                {
                <button type="submit" class="btn btn-primary pull-right">Submit</button>
                }
            </div>
        }
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->
