@model DualGlobe.ERP.Models.WorkPermitAddressModel
       
@{
    ViewBag.Title = "WorkPermit Address Details";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        WorkPermit Address List
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">WorkPermit Address List</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    
    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm("Submit", "WorkPermitAddress", FormMethod.Post))
            {
            <div class="box">
                <div class="box-body">
                    <table id="workpermit-address" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>  </th>
                                <th>Address Detail</th>
                                <th>  </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.WorkPermitAddressArray != null && Model.WorkPermitAddressArray.Count() > 0)
                            {
                                for (int i = 0; i < Model.WorkPermitAddressArray.Count(); i++)
                                {
                                <tr>
                                    <td><button type="button" class="btn-link add-AddressItem"><i class="glyphicon glyphicon-plus"></i> Add</button></td>
                                    <td>
                                        @Html.HiddenFor(model => Model.WorkPermitAddressArray[i].Id)
                                        @Html.TextAreaFor(model => Model.WorkPermitAddressArray[i].Address, new { @class = "form-control", @required = "required" })
                                    </td>
                                    <td><button type="button" data-itemId="@Model.WorkPermitAddressArray[i].Id" class="btn-link remove-AddressItem"><i class="glyphicon glyphicon-remove"></i> Remove</button></td>
                                </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td><button type="button" class="btn-link add-AddressItem"><i class="glyphicon glyphicon-plus"></i> Add</button></td>
                                    <td>
                                        <textarea class="form-control" name="WorkPermitAddressArray[0].Address" required="required"></textarea>
                                    </td>
                                    <td><button type="button" class="btn-link remove-AddressItem"><i class="glyphicon glyphicon-remove"></i> Remove</button></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary pull-right">Submit</button>
                </div>
            </div>
            }
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->