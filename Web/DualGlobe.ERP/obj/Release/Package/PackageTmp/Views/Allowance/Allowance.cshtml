@model DualGlobe.ERP.Models.AllowanceModel


@{
    ViewBag.Title = "Allowance";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Add Allowance
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="@Url.Action("Index", "Allowance")">Allowance</a></li>
        <li class="active">Add Allowance</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="box box-default">
        <!-- form start -->
        @using (Html.BeginForm("Submit", "Allowance", FormMethod.Post))
            {
            <div class="box-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.HiddenFor(model => Model.allowanceRecord.Id)
                            @Html.LabelFor(model => Model.allowanceRecord.EmployeeId, "Employee Id") <span class="required">*</span>
                            @Html.DropDownListFor(model => Model.allowanceRecord.EmployeeId, Model.EmployeeList, "--Select--", new { @id = "txtEmployeeId", @class = "form-control", @required = "required" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => Model.allowanceRecord.AllowanceDate, "Date of Allowance")<span class="required">*</span>
                            @Html.TextBoxFor(model => Model.allowanceRecord.AllowanceDate, new { @Value= Model.allowanceRecord != null ? Model.allowanceRecord.AllowanceDate.ToString("yyyy-MM-dd") :"", @id = "txtDateAllowance", @class = "form-control datepicker", @type="date", @required = "required" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => Model.allowanceRecord.ApprovedByEmployeeId, "Approved By Employee Id") <span class="required">*</span>
                            @Html.DropDownListFor(model => Model.allowanceRecord.ApprovedByEmployeeId, Model.EmployeeList, "--Select--", new { @id = "txtApprovedByEmployeeId", @class = "form-control", @required = "required" })
                        </div>
                        @*<div class="form-group">
                            @Html.LabelFor(model => Model.allowanceRecord.BonusAllowance, "Bonous Allowance")
                            @Html.TextBoxFor(model => Model.allowanceRecord.BonusAllowance, new { @id = "txtBonus", @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => Model.allowanceRecord.OtherAllowance, "Other Allowance")
                            @Html.TextBoxFor(model => Model.allowanceRecord.OtherAllowance, new { @id = "txtOtherAllowance", @class = "form-control" })
                        </div>*@
                    </div>
                    <!-- /.col -->
                    <div class="col-md-6">
                        @*<div class="form-group">
                            @Html.LabelFor(model => Model.EmployeeFullName, "Employee Name")
                            @Html.TextBoxFor(model => Model.EmployeeFullName, new { @id = "txtEmployeeName", @class = "form-control", @readonly = "readonly" })
                        </div>*@
                        <div class="form-group">
                            @Html.LabelFor(model => Model.allowanceRecord.AllowanceType, "Allowance Type") <span class="required">*</span>
                            @Html.DropDownListFor(model => Model.allowanceRecord.AllowanceType, new SelectList(new List<SelectListItem> {
                                                                                                new SelectListItem { Value = "Bonus", Text = "Bonus"},
                                                                                                new SelectListItem { Value = "Incentive", Text = "Incentive"}
                                                                                       }, "Value", "Text"), "--Select--", new { @id = "ddlAllowanceType", @class = "form-control", @required = "required" })


                        </div>
                        <div class="form-group bonus">
                            @Html.LabelFor(model => Model.allowanceRecord.BonusAllowance, "Bonus")
                            @Html.TextBoxFor(model => Model.allowanceRecord.BonusAllowance, new { @id = "txtBonus", @class = "form-control" })
                        </div>
                        <div class="form-group incentive">
                            @Html.LabelFor(model => Model.allowanceRecord.IncentiveAllowance, "Incentive")
                            @Html.TextBoxFor(model => Model.allowanceRecord.IncentiveAllowance, new { @id = "txtIncentive", @class = "form-control" })
                        </div>
                        @*<div class="form-group">
                            @Html.LabelFor(model => Model.allowanceRecord.TravelAllowance, "Travel Allowance")
                            @Html.TextBoxFor(model => Model.allowanceRecord.TravelAllowance, new { @id = "txtTravel", @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => Model.allowanceRecord.RoomRentalAllowance, "Housing Allowance")
                            @Html.TextBoxFor(model => Model.allowanceRecord.RoomRentalAllowance, new { @id = "txtRoomRental", @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => Model.allowanceRecord.FoodAllowance, "Food Allowance")
                            @Html.TextBoxFor(model => Model.allowanceRecord.FoodAllowance, new { @id = "txtFood", @class = "form-control" })
                        </div>*@
                    </div>
                </div>
                <!-- /.row -->
            </div>
            <!-- /.box-body -->

            <div class="box-footer">
                <a href="@Url.Action("Index","Allowance")" class="btn btn-primary">Back</a>
                @if (Model.allowanceRecord == null || Model.PageMode == "Edit")
                {
                <button type="submit" class="btn btn-primary pull-right">Submit</button>
                }
            </div>
        }
        @*</form>*@
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->
