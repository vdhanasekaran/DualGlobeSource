@model DualGlobe.ERP.Models.SupplierModel
           
@{
    ViewBag.Title = "Supplier Details";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Supplier List
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Supplier List</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    @if (User.IsInRole("Admin"))
    {
    <div class="box">
        <div class="box-body">
            <div class="row">
                <div class="col-xs-12">
                    <div class="form-group">
                        <a href="@Url.Action("Supplier", "Supplier")" class="btn btn-primary pull-right"><i class="fa fa-plus"></i> Add Supplier</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body">
                    <table id="tblClient" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Supplier Name</th>
                                <th>Phone No</th>
                                <th>Email</th>
                                <th style="width:120px; text-align:left;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var m in Model.supplierArray)
                            {
                                <tr>
                                    <td>@m.Id</td>
                                    <td>@m.SupplierName</td>
                                    <td>@m.PhoneNumber</td>
                                    <td>@m.Email</td>
                                    <td style="width:120px; text-align:left;">
                                        @if (User.IsInRole("Admin"))
                                        {
                                        <a href="@Url.Action("Supplier", "Supplier", new { @supplierId = m.Id, @pageMode = "Edit" })" class="btn-link"><i class="glyphicon glyphicon-edit"></i> Edit</a>
                                        <a href="@Url.Action("Supplier", "Supplier", new { @supplierId = m.Id, @pageMode = "View" })" class="btn-link pull-right"><i class="glyphicon glyphicon-eye-open"></i> View</a>
                                        }
                                        else
                                        {
                                        <a href="@Url.Action("Supplier", "Supplier", new { @supplierId = m.Id, @pageMode = "View" })" class="btn-link"><i class="glyphicon glyphicon-eye-open"></i> View</a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

<!-- /.content -->