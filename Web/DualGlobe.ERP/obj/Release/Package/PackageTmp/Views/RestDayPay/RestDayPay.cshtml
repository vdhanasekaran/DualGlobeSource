@model DualGlobe.ERP.Models.RestDayPayModel
       
@{
    ViewBag.Title = "Rest Day Pay";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Add Rest Day Pay
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="@Url.Action("Index", "RestDayPay")">Rest Day Pay</a></li>
        <li class="active">Add Rest Day Pay</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="box box-default">
        <!-- form start -->
        @using (Html.BeginForm("Submit", "RestDayPay", FormMethod.Post))
            {
            <div class="box-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.HiddenFor(model => Model.RestDayPayRecord.Id)
                            @Html.LabelFor(model => Model.RestDayPayRecord.GroupName, "Group Name") <span class="required">*</span>
                            @Html.DropDownListFor(model => Model.RestDayPayRecord.GroupName, Model.RestDayGroups, "--Select--", new { @id = "ddlGroupList", @class = "form-control", @required = "required" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => Model.RestDayPayRecord.FullRestDayPayType, "Full Rest Day Pay Type") <span class="required">*</span>
                            @Html.DropDownListFor(model => Model.RestDayPayRecord.FullRestDayPayType, Model.PayTypeList, "--Select--", new { @id = "ddlFullPayType", @class = "form-control", @required = "required" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => Model.RestDayPayRecord.FullRestDayPayValue, "Full Rest Day  Pay Value") <span class="required">*</span>
                            @Html.TextBoxFor(model => Model.RestDayPayRecord.FullRestDayPayValue, new { @id = "txtFullPayValue", @class = "form-control", @required = "required" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => Model.RestDayPayRecord.HalfRestDayPayType, "Half Rest Day Pay Type")
                            @Html.DropDownListFor(model => Model.RestDayPayRecord.HalfRestDayPayType, Model.PayTypeList, "--Select--", new { @id = "ddlHalfPayType", @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => Model.RestDayPayRecord.HalfRestDayPayValue, "Half Rest Day  Pay Value")
                            @Html.TextBoxFor(model => Model.RestDayPayRecord.HalfRestDayPayValue, new { @id = "txtHalfPayValue", @class = "form-control" })
                        </div>
                    </div>
                </div>
                <!-- /.row -->
            </div>
            <!-- /.box-body -->

            <div class="box-footer">
                <a href="@Url.Action("Index","RestDayPay")" class="btn btn-primary">Back</a>
                <button type="submit" class="btn btn-primary pull-right">Submit</button>
            </div>
        }
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->