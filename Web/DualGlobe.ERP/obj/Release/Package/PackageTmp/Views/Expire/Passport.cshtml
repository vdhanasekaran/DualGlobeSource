@model DualGlobe.ERP.Models.EmployeeModel

@{
    ViewBag.Title = "Passport Expiry Details";
}

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body">
                    <table id="tblEmployeeProject" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Employee Id</th>
                                <th>Employee Name</th>
                                <th>Passport Number</th>
                                <th>Passport Expiry Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.employeeList != null && Model.employeeList.Any())
                            {
                                foreach (var m in Model.employeeList)
                                {
                                <tr>
                                    <td>@m.Id</td>
                                    <td>@m.FirstName @m.LastName</td>
                                    <td>@m.PassportNumber</td>
                                    <td>@m.CSOCExpiryDate.GetValueOrDefault().ToString("d")</td>
                                </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->

</section>
<!-- /.content -->