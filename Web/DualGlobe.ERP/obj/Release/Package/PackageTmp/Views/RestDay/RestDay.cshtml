@model DualGlobe.ERP.Models.RestDayModel


@{
    ViewBag.Title = "Rest Day";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Add Rest Day
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="@Url.Action("Index", "RestDay")">RestDay</a></li>
        <li class="active">Add RestDayGroup</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="box box-default">
        <!-- form start -->
        @using (Html.BeginForm("Submit", "RestDay", FormMethod.Post))
        {
            <div class="box-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.HiddenFor(model => Model.RestDayRecord.Id)
                            @Html.LabelFor(model => Model.RestDayRecord.GroupName, "Group Name") <span class="required">*</span>
                            @Html.TextBoxFor(model => Model.RestDayRecord.GroupName, new { @id = "txtGroupName", @class = "form-control", @required = "required" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.RadioButtonFor(model => Model.RestDayRecord.RestDayType, "Day")
                            @Html.LabelFor(model => Model.RestDayRecord.RestDayType, "Day wise")
                        </div>
                        <div class="row top-buffer">
                            <div class="form-group day-selection">
                                <div class="col-md-2">
                                    @Html.CheckBoxFor(model => Model.RestDayRecord.IsSundayRestDay, new { @class = "restday-checkbox" })
                                </div>
                                <div class="col-md-5">
                                    @Html.LabelFor(model => Model.RestDayRecord.IsSundayRestDay, "Every Sunday")
                                </div>
                                <div class="col-md-5">
                                    @Html.DropDownListFor(model => Model.RestDayRecord.SundayRestType, Model.RestDayTypes, new { @id = "SundayRestType", @class = "form-control", @disabled = "disabled" })
                                </div>
                            </div>
                        </div>
                        <div class="row top-buffer">
                            <div class="form-group day-selection">
                                <div class="col-md-2">
                                    @Html.CheckBoxFor(model => Model.RestDayRecord.IsMondayRestDay, new { @class = "restday-checkbox" })
                                </div>
                                <div class="col-md-5">
                                    @Html.LabelFor(model => Model.RestDayRecord.IsMondayRestDay, "Every Monday")
                                </div>
                                <div class="col-md-5">
                                    @Html.DropDownListFor(model => Model.RestDayRecord.MondayRestType, Model.RestDayTypes, new { @id = "MondayRestType", @class = "form-control", @disabled = "disabled" })
                                </div>
                            </div>
                        </div>
                        <div class="row top-buffer">
                            <div class="form-group day-selection">
                                <div class="col-md-2">
                                    @Html.CheckBoxFor(model => Model.RestDayRecord.IsTuesdayRestDay, new { @class = "restday-checkbox" })
                                </div>
                                <div class="col-md-5">
                                    @Html.LabelFor(model => Model.RestDayRecord.IsTuesdayRestDay, "Every Tuesday")
                                </div>
                                <div class="col-md-5">
                                    @Html.DropDownListFor(model => Model.RestDayRecord.TuesdayRestType, Model.RestDayTypes, new { @id = "TuesdayRestType", @class = "form-control", @disabled = "disabled" })
                                </div>
                            </div>
                        </div>
                        <div class="row top-buffer">
                            <div class="form-group day-selection">
                                <div class="col-md-2">
                                    @Html.CheckBoxFor(model => Model.RestDayRecord.IsWednesdayRestDay, new { @class = "restday-checkbox" })
                                </div>
                                <div class="col-md-5">
                                    @Html.LabelFor(model => Model.RestDayRecord.IsWednesdayRestDay, "Every Wednesday")
                                </div>
                                <div class="col-md-5">
                                    @Html.DropDownListFor(model => Model.RestDayRecord.WednesdayRestType, Model.RestDayTypes, new { @id = "WednesdayRestType", @class = "form-control", @disabled = "disabled" })
                                </div>
                            </div>
                        </div>
                        <div class="row top-buffer">
                            <div class="form-group day-selection">
                                <div class="col-md-2">
                                    @Html.CheckBoxFor(model => Model.RestDayRecord.IsThursdayRestDay, new { @class = "restday-checkbox" })
                                </div>
                                <div class="col-md-5">
                                    @Html.LabelFor(model => Model.RestDayRecord.IsThursdayRestDay, "Every Thursday")
                                </div>
                                <div class="col-md-5">
                                    @Html.DropDownListFor(model => Model.RestDayRecord.ThursdayRestType, Model.RestDayTypes, new { @id = "ThursdayRestType", @class = "form-control", @disabled = "disabled" })
                                </div>
                            </div>
                        </div>
                        <div class="row top-buffer">
                            <div class="form-group day-selection">
                                <div class="col-md-2">
                                    @Html.CheckBoxFor(model => Model.RestDayRecord.IsFridayRestDay, new { @class = "restday-checkbox" })
                                </div>
                                <div class="col-md-5">
                                    @Html.LabelFor(model => Model.RestDayRecord.IsFridayRestDay, "Every Friday")
                                </div>
                                <div class="col-md-5">
                                    @Html.DropDownListFor(model => Model.RestDayRecord.FridayRestType, Model.RestDayTypes, new { @id = "FridayRestType", @class = "form-control", @disabled = "disabled" })
                                </div>
                            </div>
                        </div>
                        <div class="row top-buffer">
                            <div class="form-group day-selection">
                                <div class="col-md-2">
                                    @Html.CheckBoxFor(model => Model.RestDayRecord.IsSaturdayRestDay, new { @class = "restday-checkbox" })
                                </div>
                                <div class="col-md-5">
                                    @Html.LabelFor(model => Model.RestDayRecord.IsSaturdayRestDay, "Every Saturday")
                                </div>
                                <div class="col-md-5">
                                    @Html.DropDownListFor(model => Model.RestDayRecord.SaturdayRestType, Model.RestDayTypes, new { @id = "SaturdayRestType", @class = "form-control", @disabled = "disabled" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.RadioButtonFor(model => Model.RestDayRecord.RestDayType, "Date")
                            @Html.LabelFor(model => Model.RestDayRecord.RestDayType, "Date wise")
                        </div>
                        <div class="form-group date-selection">
                            <table id="restdays" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>  </th>
                                        <th>Date</th>
                                        <th>  </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.RestDayRecord != null && Model.RestDayRecord.RestDates != null && Model.RestDayRecord.RestDates.Count > 0)
                                    {
                                        for (int i = 0; i < Model.RestDayRecord.RestDates.Count; i++)
                                        {
                                            <tr>
                                                <td><button type="button" class="btn-link add-restdayItem"><i class="glyphicon glyphicon-plus"></i> Add</button></td>
                                                <td>
                                                    @Html.HiddenFor(model => Model.RestDayRecord.RestDates[i].Id)
                                                    @Html.HiddenFor(model => Model.RestDayRecord.RestDates[i].RestDayId)
                                                    @Html.TextBoxFor(model => Model.RestDayRecord.RestDates[i].Date, new { @Value = Model.RestDayRecord.RestDates[i].Date != null ? Model.RestDayRecord.RestDates[i].Date.Value.ToString("yyyy-MM-dd") : "", @class = "form-control datepicker", @autocomplete = "off", @type = "date" })
                                                </td>
                                                <td><button type="button" data-itemId="@Model.RestDayRecord.RestDates[i].Id" class="btn-link remove-restdayItem"><i class="glyphicon glyphicon-remove"></i> Remove</button></td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        int restDayId = Model.RestDayRecord != null ? Model.RestDayRecord.Id : 0;
                                        <tr>
                                            <td><button type="button" class="btn-link add-restdayItem"><i class="glyphicon glyphicon-plus"></i> Add</button></td>
                                            <td>
                                                <input name="RestDayRecord.RestDates[0].RestDayId" type="hidden" value="@restDayId">
                                                <input class="date form-control" name="RestDayRecord.RestDates[0].Date" type="text" value="">
                                            </td>
                                            <td><button type="button" class="btn-link remove-restdayItem"><i class="glyphicon glyphicon-remove"></i> Remove</button></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- /.row -->
            </div>
            <!-- /.box-body -->

            <div class="box-footer">
                <a href="@Url.Action("Index","RestDay")" class="btn btn-primary">Back</a>
                <button type="submit" class="btn btn-primary pull-right">Submit</button>
            </div>
        }
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->