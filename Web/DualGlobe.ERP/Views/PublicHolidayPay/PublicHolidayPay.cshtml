@model DualGlobe.ERP.Models.PublicHolidayPayModel
              
@{
    ViewBag.Title = "Public Holiday Pay";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Add Public Holiday Pay
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="@Url.Action("Index", "PublicHolidayPay")">Public Holiday Pay</a></li>
        <li class="active">Add Public Holiday Pay</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="box box-default">
        <!-- form start -->
        @using (Html.BeginForm("Submit", "PublicHolidayPay", FormMethod.Post))
            {
            <div class="box-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.HiddenFor(model => Model.PublicHolidayPayRecord.Id)
                            @Html.LabelFor(model => Model.PublicHolidayPayRecord.GroupName, "Group Name") <span class="required">*</span>
                            @Html.TextBoxFor(model => Model.PublicHolidayPayRecord.GroupName, new { @id = "txtGroupName", @class = "form-control", @required = "required" })
                            @*@Html.DropDownListFor(model => Model.PublicHolidayPayRecord.GroupName, Model.RestDayPayGroups, "--Select--", new { @id = "ddlGroupList", @class = "form-control", @required = "required" })*@
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(model => Model.PublicHolidayPayRecord.PayType, "Pay Type") <span class="required">*</span>
                            @Html.DropDownListFor(model => Model.PublicHolidayPayRecord.PayType, Model.PayTypeList, "--Select--", new { @id = "ddlPayType", @class = "form-control", @required = "required" })
                        </div>

                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(model => Model.PublicHolidayPayRecord.PayValue, "Pay Value") <span class="required">*</span>
                            @Html.TextBoxFor(model => Model.PublicHolidayPayRecord.PayValue, new { @id = "txtPayValue", @class = "form-control", @required="required" })
                        </div>
                    </div>
                </div>
                <!-- /.row -->
            </div>
            <!-- /.box-body -->

            <div class="box-footer">
                <a href="@Url.Action("Index","PublicHolidayPay")" class="btn btn-primary">Back</a>
                <button type="submit" class="btn btn-primary pull-right">Submit</button>
            </div>
        }
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->