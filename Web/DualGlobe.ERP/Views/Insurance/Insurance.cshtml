@model DualGlobe.ERP.Models.InsuranceModel
       
@{
    ViewBag.Title = "Insurance";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Add Insurance
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="@Url.Action("Index", "Insurance")">Insurance</a></li>
        <li class="active">Add Insurance</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="box box-default">
        <!-- form start -->
        @using (Html.BeginForm("Submit", "Insurance", FormMethod.Post))
            {
            <div class="box-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.HiddenFor(model => Model.InsuranceRecord.Id)
                            @Html.LabelFor(model => Model.InsuranceRecord.InsuranceType, "Insurance Type") <span class="required">*</span>
                            @Html.DropDownListFor(model => Model.InsuranceRecord.InsuranceType, Model.InsuranceTypeList, "--Select--", new { @id = "ddlTypeList", @class = "form-control", @required = "required" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => Model.InsuranceRecord.InsuranceProviderName, "Insurance Provider Name") <span class="required">*</span>
                            @Html.TextBoxFor(model => Model.InsuranceRecord.InsuranceProviderName, new { @id = "txtName", @class = "form-control", @required = "required" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => Model.InsuranceRecord.InsurancePolicyNumber, "Insurance Policy Number") <span class="required">*</span>
                            @Html.TextBoxFor(model => Model.InsuranceRecord.InsurancePolicyNumber, new { @id = "txtNumber", @class = "form-control", @required = "required" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => Model.InsuranceRecord.StartDate, "Start Date") <span class="required">*</span>
                            @Html.TextBoxFor(model => Model.InsuranceRecord.StartDate, new { @Value = Model.InsuranceRecord != null && Model.InsuranceRecord.StartDate != null ? Model.InsuranceRecord.StartDate.Value.ToString("yyyy-MM-dd") : "", @id = "txtStartDateDate", @class = "form-control datepicker", @type="date", @required = "required" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => Model.InsuranceRecord.EndDate, "End Date") <span class="required">*</span>
                            @Html.TextBoxFor(model => Model.InsuranceRecord.EndDate, new { @Value = Model.InsuranceRecord != null && Model.InsuranceRecord.EndDate != null ? Model.InsuranceRecord.EndDate.Value.ToString("yyyy-MM-dd") : "", @id = "txtEndDate", @class = "form-control datepicker", @type="date", @required = "required" })
                        </div>

                    </div>
                </div>
                <!-- /.row -->
            </div>
            <!-- /.box-body -->

            <div class="box-footer">
                <a href="@Url.Action("Index","Insurance")" class="btn btn-primary">Back</a>
                <button type="submit" class="btn btn-primary pull-right">Submit</button>
            </div>
        }
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->