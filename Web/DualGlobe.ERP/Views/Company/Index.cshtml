@model DualGlobe.ERP.Models.CompanyModel
    
@{
    ViewBag.Title = "Company Details";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Company List
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Company List</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    @if (User.IsInRole("Admin"))
    {
    <div class="box">
        <div class="box-body">
            <div class="row">
                <div class="col-xs-12">
                    <div class="form-group">
                        <a href="@Url.Action("Company", "Company")" class="btn btn-primary pull-right"><i class="fa fa-plus"></i> Add Company</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body">
                    <table id="tblClient" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Company Name</th>
                                <th>Industry</th>
                                <th>Type</th>
                                <th>Status</th>
                                <th style="width:120px; text-align:left;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var m in Model.companyArray)
                            {
                                <tr>
                                    <td>@m.Id</td>
                                    <td>@m.CompanyName</td>
                                    <td>@m.IndustryClassification</td>
                                    <td>@m.CompanyType</td>
                                    <td>@m.Status</td>
                                    <td style="width:120px; text-align:left;">
                                        @if (User.IsInRole("Admin"))
                                        {
                                        <a href="@Url.Action("Company", "Company", new { @companyId = m.Id, @pageMode = "Edit" })" class="btn-link"><i class="glyphicon glyphicon-edit"></i> Edit</a>
                                        <a href="@Url.Action("Company", "Company", new { @companyId = m.Id, @pageMode = "View" })" class="btn-link pull-right"><i class="glyphicon glyphicon-eye-open"></i> View</a>
                                        }
                                        else
                                        {
                                        <a href="@Url.Action("Company", "Company", new { @companyId = m.Id, @pageMode = "View" })" class="btn-link"><i class="glyphicon glyphicon-eye-open"></i> View</a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

<!-- /.content -->