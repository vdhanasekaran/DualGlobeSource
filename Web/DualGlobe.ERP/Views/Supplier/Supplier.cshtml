@model DualGlobe.ERP.Models.SupplierModel

@{
    ViewBag.Title = "Supplier";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Add Supplier
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="@Url.Action("Index", "Supplier")">Supplier</a></li>
        <li class="active">Add Supplier</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="box box-default">
        <!-- form start -->
        @using (Html.BeginForm("Submit", "Supplier", FormMethod.Post))
        {
        <div class="box-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.HiddenFor(model => Model.supplierRecord.Id)
                        @Html.LabelFor(model => Model.supplierRecord.SupplierName, "Supplier Name") <span class="required">*</span>
                        @Html.TextBoxFor(model => Model.supplierRecord.SupplierName, new { @id = "txtSupplierName", @class = "form-control", @required = "required" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => Model.supplierRecord.ContactPerson, "Contact Person")
                        @Html.TextBoxFor(model => Model.supplierRecord.ContactPerson, new { @id = "txtContactPerson", @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => Model.supplierRecord.PhoneNumber, "Phone Number")
                        @Html.TextBoxFor(model => Model.supplierRecord.PhoneNumber, new { @id = "txtPhoneNumber", @class = "form-control" })
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => Model.supplierRecord.FaxNumber, "Fax Number")
                        @Html.TextBoxFor(model => Model.supplierRecord.FaxNumber, new { @id = "txtFaxNumber", @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => Model.supplierRecord.Email, "Email")
                        @Html.TextBoxFor(model => Model.supplierRecord.Email, new { @id = "txtEmail", @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => Model.supplierRecord.Address, "Address")
                        @Html.TextAreaFor(model => Model.supplierRecord.Address, new { @id = "txtAddress", @class = "form-control" })
                    </div>

                </div>
            </div>
            <!-- /.row -->
        </div>
        <!-- /.box-body -->

            <div class="box-footer">
                <a href="@Url.Action("Index","Supplier")" class="btn btn-primary">Back</a>
                @if (Model.supplierRecord == null || Model.PageMode == "Edit")
                {
                <button type="submit" class="btn btn-primary pull-right">Submit</button>
                }
            </div>
        }
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->
