@model DualGlobe.ERP.Models.AccountModel


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Account")"><i class="fa fa-dashboard"></i> Account</a></li>
            <li class="active">Login</li>
        </ol>
    </section>
    <section class="content">
        <div class="col-md-3">
        </div>
        <div class="col-md-6">
            <div class="row">
                <!-- Horizontal Form -->
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Account Login</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        <div class="box-body">
                            <div class="form-group">
                                @Html.LabelFor(model => Model.userRecord.UserId, "User Name: *", new { @class = "col-sm-4 control-label" })
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(model => Model.userRecord.UserId, new { @id = "txtUserName", @class = "form-control", @required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => Model.userRecord.Password, "Password: *", new { @class = "col-sm-4 control-label" })
                                <div class="col-sm-8">
                                    @Html.PasswordFor(model => Model.userRecord.Password, new { @id = "txtPassword", @class = "form-control", @required = "required" })
                                </div>
                            </div>
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <button type="submit" class="btn btn-info pull-right">Sign in</button>
                        </div>
                        <!-- /.box-footer -->

                        if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                        {
                            <div class="alert alert-warning alert-dismissible">
                                <h4><i class="icon fa fa-warning"></i> Error!</h4>
                                @ViewBag.ErrorMessage
                            </div>
                        }
                    }
                </div>
                <!-- /.box -->
            </div>
        </div>
        <div class="col-md-3">
        </div>
    </section>
</section>
