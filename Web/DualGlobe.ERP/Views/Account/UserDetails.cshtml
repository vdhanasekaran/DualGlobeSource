@model DualGlobe.ERP.Models.AccountModel

@{
    ViewBag.Title = "Account Details";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        User Account List
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">User Account List</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="box">
        <div class="box-body">
            <div class="row">
                <div class="col-xs-12">
                    <div class="form-group">
                        <a href="@Url.Action("AddUser","Account")" class="btn btn-primary pull-right"><i class="fa fa-plus"></i> Add User</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body">
                    <table id="tblUserDetails" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Employee Id</th>
                                <th>Employee Name</th>
                                <th>User Name</th>
                                <th>Role</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var m in Model.userArray)
                            {
                                <tr>
                                    <td>@m.EmployeeId</td>
                                    @if (m.employee != null)
                                    {
                                    <td>@m.employee.FirstName @m.employee.LastName</td>
                                    }
                                    else
                                    {
                                    <td>Super Admin</td>
                                    }
                                    <td>@m.UserId</td>
                                    <td>@m.Role</td>
                                    <td>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <a href="@Url.Action("AddUser", "Account", new { @id = m.Id, @pageMode = "Edit" })" class="btn-link"><i class="glyphicon glyphicon-edit"></i> Edit</a>
                                        }
                                        <a href="@Url.Action("AddUser","Account", new { @id = m.Id , @pageMode ="View"})" class="btn-link pull-right"><i class="glyphicon glyphicon-eye-open"></i> View</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->